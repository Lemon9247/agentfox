{
  "manifest_version": 2,
  "name": "Agent Fox",
  "version": "0.1.0",
  "description": "AI browser agent bridge for Firefox â€” lets Claude Code control your real browser",
  "browser_specific_settings": {
    "gecko": {
      "id": "agentfox@willow.sh",
      "strict_min_version": "115.0"
    }
  },
  "permissions": [
    "nativeMessaging",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
